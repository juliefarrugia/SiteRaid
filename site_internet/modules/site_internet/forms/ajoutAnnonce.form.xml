<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">
    
    <menulist ref="recherche" required="true">
      <label>Vous recherchez</label>
      <item value="1 Participant">1 Participant</item>
      <item value="2 Participants">2 Participants</item>
      <item value="3 Participants">3 Participants</item>
    </menulist>
    
    <menulist ref="typeRaid" required="true">
      <label>Type de Raid</label>
      <item value="Aventure">Aventure</item>
      <item value="Expert">Expert</item>
      <alert type="required">Le type de Raid est obligatoire</alert>
    </menulist>
    
     <textarea ref="contact" required="true" maxlength="50" minlength="5">
        <label>Coordonnées de la personne à contacter</label>
     </textarea>
    
 <submit ref="submit">
    <label>Envoyer l'annonce</label>
</submit>

</form>